<%= form_for @user do |f| %>

  <ul>
    <li>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </li>
    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
    <li>
      <%= f.label :bio %>
      <%= f.text_field :bio %>
    </li>
  </ul>

  <%= f.submit %>

<% end %>
